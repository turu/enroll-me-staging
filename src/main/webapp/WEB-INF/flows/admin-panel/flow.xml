<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="parent-flow">

    <!-- <var name="person" class="pl.agh.enrollme.model.Person" /> -->

    <var name="enrollment" class="pl.agh.enrollme.model.Enrollment" />

    <input name="tab" value="flowScope.tab" required="false" />


    <view-state id="list">
        <on-render>
            <evaluate expression="enrollmentDAO.listEnrollments()" result="viewScope.enrollmentList"/>
            <evaluate expression="personDAO.listPeople()" result="viewScope.peopleList"/>
        </on-render>
        <transition on="new" to="add"/>
        <transition on="configure" to="configure"/>

    </view-state>

    <view-state id="add">
        <transition on="add" to="list">
            <!-- <evaluate expression="personDAO.addPerson(person)"/> -->
            <evaluate expression="enrollmentDAO.addEnrollment(enrollment)"/>
        </transition>
        <transition on="resign" to="list"/>
    </view-state>

    <view-state id="configure">
        <on-render>
            <set name="viewScope.id" value="requestParameters.id" type="integer"/>
        </on-render>
    </view-state>

</flow>