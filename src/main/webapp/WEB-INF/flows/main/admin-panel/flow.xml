<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <subflow-state id="chooseEvent" subflow="main/admin-panel/event-selection">
        <transition on="eventToBeAdded" to="manageEvent">
            <set value="currentEvent.attributes.eventID" name="flowScope.eventID" type="int"/>
        </transition>
        <transition on="eventChosen" to="manageEvent">
            <set value="currentEvent.attributes.eventID" name="flowScope.eventID" type="int"/>
        </transition>
    </subflow-state>

    <subflow-state id="manageEvent" subflow="main/admin-panel/event-management">
        <transition to="chooseEvent"/>
    </subflow-state>

</flow>