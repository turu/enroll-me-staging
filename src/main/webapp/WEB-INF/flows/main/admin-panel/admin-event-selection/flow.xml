<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <secured attributes="ROLE_ADMIN"/>



    <view-state id="view">
        <on-render>
            <evaluate expression="eventDAO.listEvents()" result="viewScope.eventList"/>
        </on-render>
        <transition on="create" to="eventToBeAdded">
            <!-- <set name="managedEvent" value="eventDAO.createAndReturnEvent()"/> -->
        </transition>
        <transition on="modify" to="eventToBeConfigured">
            <!-- <set name="managedEvent" value="eventDAO.getEvent(3)"/> -->
        </transition>
        <transition on="remove" to="view">
            <evaluate expression="eventDAO.removeEvent(requestParameters.id)"/>
            <!-- <set name="managedEvent" value="eventDAO.getEvent(3)"/> -->
        </transition>
    </view-state>

    <end-state id="eventToBeAdded">
        <!-- <output name="eventID" value="eventDAO.createEventAndReturnID()"/> -->
        <!-- <output name="managedEvent" value="eventDAO.createAndReturnEvent()"/> -->
    </end-state>

    <end-state id="eventToBeConfigured">
        <!-- <output name="managedEvent" value="eventDAO.getEvent(3)"/> -->
    </end-state>

</flow>