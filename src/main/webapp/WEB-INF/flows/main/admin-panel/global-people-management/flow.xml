<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
      http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <secured attributes="ROLE_ADMIN" match="any"/>

    <view-state id="list">
        <!-- Object to be filled with new person details when creating new user using form -->
        <var name="newPerson" class="pl.agh.enrollme.model.Person"/>
        <!-- Stores new password when using "Reset password" feature -->
        <var name="newPassword" class="java.lang.String"/>

        <on-render>
            <evaluate expression="personDAO.listPeople()" result="viewScope.peopleList"/>
        </on-render>

        <transition on="add">
            <evaluate expression="personDAO.addPerson(newPerson)"/>
            <set name="newPerson" value="new pl.agh.enrollme.model.Person()"/>
        </transition>

        <!-- Resetting password -->

        <transition on="reset-password">
            <set name="newPassword" value="new java.lang.String()"/>
            <set name="viewScope.passwordResetPerson" value="personDAO.getPerson(requestParameters.id)"/>
        </transition>

        <transition on="reset-password-accept">
            <evaluate expression="personService.setEncodedPassword(viewScope.passwordResetPerson, newPassword)"/>
            <evaluate expression="personDAO.updatePerson(viewScope.passwordResetPerson)"/>
            <set name="viewScope.passwordResetPerson" value="null"/>
        </transition>

        <transition on="reset-password-cancel">
            <set name="viewScope.passwordResetPerson" value="null"/>
        </transition>

        <!-- Deleting people -->
        <transition on="delete">
            <set name="viewScope.deletePerson" value="personDAO.getPerson(requestParameters.id)"/>
        </transition>

        <transition on="delete-accept">
            <evaluate expression="personDAO.removePerson(viewScope.deletePerson.id)"/>
            <set name="viewScope.deletePerson" value="null"/>
        </transition>

        <transition on="delete-cancel">
            <set name="viewScope.deletePerson" value="null"/>
        </transition>

        <transition on="finished" to="finished"/>
    </view-state>

    <end-state id="finished"/>
</flow>