<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <secured attributes="ROLE_USER, ROLE_ADMIN" match="any"/>

    <var name="scheduleController" class="pl.agh.enrollme.controller.preferencesmanagement.ScheduleController" />
    <var name="ringController" class="pl.agh.enrollme.controller.preferencesmanagement.RingController"/>

    <input name="currentEnrollment" type="pl.agh.enrollme.model.Enroll" required="true"/>
    
    <on-start>
        <evaluate expression="preferencesManagementService.createPreferencesManagementController(currentEnrollment)"
                  result="preferencesController"
                  result-type="pl.agh.enrollme.controller.preferencesmanagement.PreferencesManagementController"/>
    </on-start>

    <view-state id="view">
        <transition on="done" to="preferencesApplied"/>
    </view-state>

    <end-state id="preferencesApplied" />

    <global-transitions>
        <transition on="exit" to="preferencesApplied"/>
    </global-transitions>

</flow>