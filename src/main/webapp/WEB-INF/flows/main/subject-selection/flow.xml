<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <secured attributes="ROLE_USER, ROLE_ADMIN" match="any"/>

    <var name="selectionTableModel" class="pl.agh.enrollme.model.SelectableDataModelForSubjects"/>
    <var name="subjectModel" class="pl.agh.enrollme.model.Subject"/>

    <input name="currentEnrollment" type="pl.agh.enrollme.model.Enroll" required="true"/>

    <view-state id="view" model="subjectModel">
        <on-render>
            <evaluate expression="subjectChoosingService.getAvailableSubjectForEnrollment(currentEnrollment)"
                      result="viewScope.subjectList"/>
        </on-render>
        <transition on="done" to="subjectsChosen"/>
    </view-state>

    <end-state id="subjectsChosen"/>

</flow>